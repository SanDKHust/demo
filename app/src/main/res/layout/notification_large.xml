<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/icon_music"
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="60dp" />

    <ImageButton
        android:layout_margin="@dimen/margin_8"
        android:id="@+id/close_btn"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:text="Title"
        android:id="@+id/title_tv"
        android:layout_toRightOf="@id/img"
        android:layout_toLeftOf="@id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img"
        android:layout_marginStart="4dp"
        android:layout_toStartOf="@id/close_btn" />
    <TextView
        android:layout_marginLeft="4dp"
        android:layout_below="@id/title_tv"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:text="Description"
        android:id="@+id/description_tv"
        android:layout_toRightOf="@id/img"
        android:layout_toLeftOf="@id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/img"
        android:layout_toStartOf="@id/close_btn" />
    <ImageButton
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:id="@+id/play_pause_btn"
        android:layout_marginRight="@dimen/margin_8"
        android:tint="#737373"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8" />
    <ImageButton
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_alignBottom="@id/play_pause_btn"
        android:layout_toRightOf="@id/play_pause_btn"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_next_"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_toEndOf="@id/play_pause_btn" />

    <ImageButton
        android:layout_marginRight="@dimen/margin_8"
        android:layout_toLeftOf="@id/play_pause_btn"
        android:layout_alignBottom="@id/play_pause_btn"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_previous_"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_toStartOf="@id/play_pause_btn" />
</RelativeLayout>